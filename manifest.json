{
  "manifest_version": 2,
  "name": "YT Captions",
  "version": "1.6",
  "description": "Enhanced YouTube viewing experience",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*",
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}